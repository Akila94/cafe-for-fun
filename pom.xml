    <properties>
        <identity.framework.base.version>5.7.5</identity.framework.base.version>
        <mysql.connector.java.version>5.1.39</mysql.connector.java.version>
        <slf4j.api.version>1.6.1</slf4j.api.version>

        <!--OSGi properties-->
        <apache.maven.scr.plugin.version>1.22.0</apache.maven.scr.plugin.version>
        <apache.maven.bundle.plugin.version>2.4.0</apache.maven.bundle.plugin.version>
        <apache.felix.scr.ds.annotation.version>1.2.4</apache.felix.scr.ds.annotation.version>
        <eclipse.osgi.version>3.5.100.v20160504-1419</eclipse.osgi.version>
        <carbon.core.version>4.4.20</carbon.core.version>

        <!--OSGi import package version reanges-->
