        <apache.cxf.jaxrs.version>3.1.7</apache.cxf.jaxrs.version>
        <apache.cxf.service.description>3.1.7</apache.cxf.service.description>
        <codehaus.jackson.version>1.8.6</codehaus.jackson.version>
        <codehaus.jackson.version>1.8.6</codehaus.jackson.version>
    </properties>
</project>